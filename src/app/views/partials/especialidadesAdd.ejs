<% include ./header %>
    <title>Agregar Especialidad</title>
</head>

<body>
    <%include ./menu %>
    <div class="contenido abrir">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container navbar-brand">Agregar Especialidad
        </div>
    </nav>
    <br>
    <i id="menu-bar" class="fas fa-bars fa-2x"></i>
    <br>
    <div class="col-7">
        <br><br>
        <div class="card">
            <br>
            <div class="card-body">
                <form action="/especialidades" method="post">
                    <div class="form-group row">
                        <div class="col-2"></div>
                        <input type="text" name="nombre" id="nombre" class="form-control col-8" placeholder="Nombre" required>
                    </div>
                    <div class="form-group row">
                        <div class="col-2"></div>
                        <input type="submit" value="Agregar" class="btn btn-primary">
                        <a href="/especialidades" role="button" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
<script src="/js/abrirMenu.js"></script>
<script>
    $(document).ready(()=>{
        $('#nombre').focus();
    })
</script>
</body>
</html>
