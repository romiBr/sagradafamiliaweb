<% include ./header %>

    <title>Modificar Obra Social</title>
</head>

<body>
    <%include ./menu %>

<div class="contenido abrir">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="navbar-brand">Modificar Obra Social
    </div>
    </nav>
    <br>
    <i id="menu-bar" class="fas fa-bars fa-2x"></i>
    <br>
    <div class="col-6">
        <br><br>
        <div class="card">
            <br>
            <div class="card-body">
                <form action="/obrassociales/edit/<%=obrasSociales.idObraS %>" method="post">
                    <div class="form-group row">
                        <label class="col-2 col-form-label">Nombre:</label>
                        <input type="text" name="nombre" id="nombre" value="<%= obrasSociales.nombreObraS %>" class="col-9 form-control" required>
                    </div>
                    <div class="form-group row">
                        <label class="col-2 col-form-label">Dirección:</label>
                        <input type="text" name="direccion" value="<%= obrasSociales.direccionObraS %>" class="col-9 form-control" required>
                    </div>
                    <div class="form-group row">
                        <label class="col-2 col-form-label">Teléfono:</label>
                        <input type="phone" name="telefono" value="<%= obrasSociales.telefonoObraS %>" class="col-9 form-control" required>
                    </div>
                    <div class="form-group row">
                        <label class="col-2 col-form-label">E-mail:</label>
                        <input type="email" name="email" value="<%= obrasSociales.emailObraS %>" class="col-9 form-control" required>
                    </div>
                    <div class="m-2 row">
                    <label class="form-check-label">Habilitada:</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                        <label class="form-check-label" for="exampleRadios1">
                            Sí
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                        <label class="form-check-label" for="exampleRadios2">
                            No
                        </label>
                    </div>
                    </div>
                    <div class="form-group">
                        
                        <input type="submit" value="Modificar" class="btn btn-primary">
                        <a href="/obrassociales" role="button" class="btn btn-secondary">Cancelar</a>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/abrirMenu.js"></script>
<script>
    $(document).ready(()=>{
        $('#nombre').focus();
    })
</script>
</body>
</html>